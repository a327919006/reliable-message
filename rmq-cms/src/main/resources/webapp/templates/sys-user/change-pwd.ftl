
<form id="password-changeform" method="post" class="field-form">
    <table>
        <tr>
            <td>旧的登录密码<span class="required-field-title">*</span></td>
            <td><input name="oldPwd" maxlength="50" class="easyui-validatebox" data-options="required:true"/></td>
        </tr>
        <tr>
            <td>新密码<span class="required-field-title">*</span></td>
            <td><input name="newPwd" maxlength="50" class="easyui-validatebox" data-options="required:true"/></td>
        </tr>
        <tr>
            <td>再次输入新密码<span class="required-field-title">*</span></td>
            <td><input name="newPwdRepeat" maxlength="50" class="easyui-validatebox" data-options="required:true"/></td>
        </tr>
    </table>
</form>

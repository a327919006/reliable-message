<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cn.rmq.dal.mapper.MessageMapper">

    <resultMap id="CmsMessageVo" type="com.cn.rmq.api.model.vo.cms.message.CmsMessageVo" >
        <id column="id" property="id" jdbcType="CHAR" />
        <result column="consumer_queue" property="consumerQueue" jdbcType="VARCHAR" />
        <result column="resend_times" property="resendTimes" jdbcType="SMALLINT" />
        <result column="already_dead" property="alreadyDead" jdbcType="TINYINT" />
        <result column="status" property="status" jdbcType="TINYINT" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
        <result column="message_body" property="messageBody" jdbcType="LONGVARCHAR" />
    </resultMap>

    <sql id="condition">
        <if test="id != null and id != ''">
            AND id = #{messageId,jdbcType=CHAR}
        </if>
        <if test="consumerQueue != null and consumerQueue != ''">
            AND consumer_queue = #{consumerQueue,jdbcType=VARCHAR}
        </if>
        <if test="alreadyDead != null">
            AND already_dead = #{alreadyDead,jdbcType=TINYINT}
        </if>
    </sql>

    <update id="addResendTimes" parameterType="java.lang.String">
        UPDATE t_message
        SET resend_times = resend_times + 1,
          update_time = now()
        WHERE id = #{messageId,jdbcType=CHAR}
    </update>

    <select id="count" parameterType="Message">
        SELECT count(1)
        FROM t_message
        WHERE 1=1
        <include refid="condition"/>
    </select>

    <select id="list" parameterType="Message">
        SELECT
        <include refid="Base_Column_List" />
        ,
        <include refid="Blob_Column_List" />
        FROM t_message
        WHERE 1=1
        <include refid="condition"/>
    </select>

    <select id="cmsListPage" parameterType="com.cn.rmq.api.model.dto.cms.message.CmsMessageListDto"
            resultMap="CmsMessageVo">
        SELECT <include refid="Base_Column_List" />
        FROM t_message
        WHERE 1=1
        <if test="consumerQueue != null and consumerQueue != ''">
            AND consumer_queue LIKE CONCAT (#{consumerQueue,jdbcType=VARCHAR},'%')
        </if>
        <if test="alreadyDead != null">
            AND already_dead = #{alreadyDead,jdbcType=TINYINT}
        </if>
        <if test="status != null">
            AND status = #{status,jdbcType=TINYINT}
        </if>
        <choose>
            <when test="createStartTime != null and createEndTime != null">
                AND create_time >= #{createStartTime,jdbcType=VARCHAR}
                AND create_time &lt;= #{createEndTime,jdbcType=VARCHAR}
            </when>
            <when test="createStartTime != null and createEndTime == null">
                AND create_time >= #{createStartTime,jdbcType=VARCHAR}
                AND create_time &lt;= NOW()
            </when>
            <when test="createStartTime == null and createEndTime != null">
                AND create_time &lt;= #{createEndTime,jdbcType=VARCHAR}
            </when>
        </choose>
    </select>
</mapper>